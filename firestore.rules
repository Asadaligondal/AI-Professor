rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write exams and submissions
    match /exams/{examId} {
      allow read, write: if request.auth != null;
      
      match /submissions/{submissionId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}